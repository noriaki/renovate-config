{
  "name": "@noriaki/renovate-config",
  "version": "0.1.2",
  "description": "Renovate configure",
  "main": "index.js",
  "repository": "git@github.com:noriaki/renovate-config.git",
  "author": "Noriaki Uchiyama <uchiyama.noriaki@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "renovate-config-validator"
  },
  "devDependencies": {
    "renovate": "^32.192.4"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ]
    },
    "universal-app": {
      "extends": [
        "config:js-app",
        ":timezone(Asia/Tokyo)",
        "schedule:nonOfficeHours",
        ":semanticPrefixChore",
        ":prHourlyLimitNone",
        ":prConcurrentLimit10",
        ":automergeMinor"
      ],
      "packageRules": [
        {
          "groupName": "Linting (ESLint and Prettier)",
          "description": "ESLint / Prettier with TypeScript packages group",
          "extends": [
            "monorepo:typescript-eslint"
          ],
          "packageNames": [
            "eslint",
            "prettier"
          ],
          "packagePatterns": [
            "^eslint-config-",
            "^eslint-plugin-",
            "^@typescript-eslint/"
          ]
        },
        {
          "groupName": "Testing (Jest and Enzyme)",
          "description": "unit / ui test packages group",
          "extends": [
            "monorepo:jest"
          ],
          "packageNames": [
            "jest",
            "enzyme",
            "ts-jest"
          ],
          "packagePatterns": [
            "^jest-",
            "^enzyme-"
          ]
        }
      ]
    }
  }
}
